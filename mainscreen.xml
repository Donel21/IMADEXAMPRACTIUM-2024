<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3"
    tools:context=".MainActivity2" >

    <EditText
        android:id="@+id/dayInput"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:background="#0B1223"
        android:backgroundTint="#77AFC5"
        android:ems="10"
        android:hint="Enter Day E.g Monday,Tuesday"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minimumInput"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="#0B1223"
        android:backgroundTint="#77AFC5"
        android:ems="10"
        android:hint="Enter Minimum Temperature E.g 22,44."
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayInput" />

    <EditText
        android:id="@+id/maximumInput"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:background="#0B1223"
        android:backgroundTint="#77AFC5"
        android:ems="10"
        android:hint="Enter Maximum Temperature E.g 22,44."
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minimumInput" />

    <EditText
        android:id="@+id/weatherConditionInput"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="#0B1223"
        android:backgroundTint="#77AFC5"
        android:ems="10"
        android:hint="Enter Weather Condtion E.g Hot, Cold."
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maximumInput" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#2C4770"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Save"
        android:textColor="#0F1C27"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherConditionInput" />

    <Button
        android:id="@+id/detailedDailyViewButton"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2C4770"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Detailed Daily Views"
        android:textColor="#0F1C27"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveButton" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#2C4770"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Clear"
        android:textColor="#0F1C27"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedDailyViewButton"
        app:layout_constraintVertical_bias="0.258" />
</androidx.constraintlayout.widget.ConstraintLayout>